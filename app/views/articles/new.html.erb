<div class="col-8 col-mx-auto">
  <%= form_for @article, html: { class: "form-group" } do |f| %>
    <div class="form-group <%= has_errors_for?(@article, :title) %>">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-input", placeholder: "Article Title" %>
      <% if has_errors_for?(@article, :title) %>
        <p class="form-input-hint">
          <%= errors_for(@article, :title) %>
        </p>
      <% end %>
    </div>

    <div class="form-group <%= has_errors_for?(@article, :content) %>">
      <%= f.label :content, class: "form-label" %>
      <%= f.text_area :content, class: "form-input", rows: 8%>
      <% if has_errors_for?(@article, :content) %>
        <p class="form-input-hint">
          <%= errors_for(@article, :content) %>
        </p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-primary" %>
      <%= link_to "Cancel", url_for(:back), class: "btn btn-link" %>
    </div>
  <% end %>
</div>
